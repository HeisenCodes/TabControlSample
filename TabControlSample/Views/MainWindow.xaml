<Window x:Class="TabControlSample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabControlSample"
        xmlns:v="clr-namespace:TabControlSample.Views"
        xmlns:vm="clr-namespace:TabControlSample.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="225" Width="400" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ParentTabViewModel}">
            <v:ParentTabView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <TabControl DisplayMemberPath="Name" ItemsSource="{Binding ParentViewModels}" />
    </Grid>
</Window>
