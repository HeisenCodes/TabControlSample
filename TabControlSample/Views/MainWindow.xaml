<Window
    x:Class="TabControlSample.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TabControlSample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:TabControlSample.Views"
    xmlns:vm="clr-namespace:TabControlSample.ViewModels"
    Title="MainWindow"
    Width="400"
    Height="225"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ParentTabViewModel}">
            <v:ParentTabView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <TabControl DisplayMemberPath="Name" ItemsSource="{Binding ParentTabViewModels}" />
    </Grid>
</Window>
