<UserControl
    x:Class="TabControlSample.Views.ParentTabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TabControlSample.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:TabControlSample.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:ParentTabViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <TabControl
            DisplayMemberPath="Name"
            ItemsSource="{Binding ChildTabViewModels}"
            SelectedItem="{Binding SelectedChildTabViewModel}" />
    </Grid>
</UserControl>
